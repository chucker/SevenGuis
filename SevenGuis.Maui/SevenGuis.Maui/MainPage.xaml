<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sevenguis="clr-namespace:SevenGuis.Maui"
             x:Class="SevenGuis.Maui.MainPage"
             x:DataType="sevenguis:MainPage">

    <VerticalStackLayout Spacing="10" Margin="10">

        <Button Text="Counter"
                Command="{Binding Navigate}" CommandParameter="Counter" />

        <Button Text="Temperature Converter"
                Command="{Binding Navigate}" CommandParameter="TemperatureConverter" />

    </VerticalStackLayout>

</ContentPage>
